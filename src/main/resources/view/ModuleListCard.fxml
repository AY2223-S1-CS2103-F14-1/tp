<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<HBox xmlns:fx="http://javafx.com/fxml/1" id="cardPane" xmlns="http://javafx.com/javafx/8"
  fx:id="cardPane">
  <GridPane HBox.hgrow="ALWAYS">
    <VBox GridPane.columnIndex="0" alignment="CENTER_LEFT" minHeight="105">
      <HBox alignment="CENTER_LEFT" spacing="5">
        <FlowPane hgap="5" fx:id="semesterData"/>
        <Label styleClass="cell_big_label" text="\$first" fx:id="moduleCode"/>
        <Label styleClass="cell_big_label" fx:id="id">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE"/>
          </minWidth>
        </Label>
      </HBox>
      <Label styleClass="cell_small_label" text="\$title" fx:id="title"/>
      <Label styleClass="cell_small_label" text="\$department" fx:id="department"/>
      <padding>
        <Insets bottom="5" left="15" right="5" top="5"/>
      </padding>
    </VBox>
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="100"/>
    </columnConstraints>
  </GridPane>
</HBox>
